<section class="slider">
	<div class="container">
		<div class="slider-container">
			<div class="slider-text">
				<ul class="js-rotating">
					{% if slider_code != '' %}
						{{ slider_code | striptags('<ol>,<ul>,<li>,<p>,<a>,<img>,<video>,<h1>,<h2>,<h3>,<h4>,<h5>,<h6>,<em>,<strong>,<br>,<i>,<button>,<mark>,<hr>') | raw }}
					{% else %}
						<li>
							<h1>Welcome To
								<em>Drupal News</em>
								Website</h1>
							<p>We present you game news.</p>
							<a class="button-link" href="/DrupalRepo/drupal-8.9.14/news">Explore</a>


						</li>
						<li>
							<h1>We Create
								<em>Awesome</em>
								Game News!</h1>
							<p>XXXXX.</p>
							<a class="button-link" href="/DrupalRepo/drupal-8.9.14/news">Explore</a>


						</li>
					{% endif %}
				</ul>
				<!--/.home-slider -->
			</div>
			<!-- /slider-text -->
			<div class="slider-image">
				{% if slider_image_path != '' %}
					<img src="{{ slider_image_path }}" alt="slider image"/>
				{% else %}
					<img src="{{ directory }}/images/slider.svg" alt="slider image"/>
				{% endif %}
			</div>
			<!-- /slider-image -->
		</div>
		<!--/.slider-container -->
	</div>
	<!--/.container -->
</section>
